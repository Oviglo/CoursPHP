{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user }}</h1>

    <ul class="list-group">
        {% for article in user.articles %}
        <li class="list-group-item">
            <a href="{{ path('app_article_show', {'id': article.id}) }}">
                {{ article.title }}
            </a>
        </li>
        {% endfor %}
    </ul>

{% endblock %}
