{{ form_start(form) }} {# affiche la balise d'ouverture du form #}
{% embed "decorators/_card.html.twig" %}
    {% block body %}
        {{ form_errors(form) }} {# Affiche les eventuelles erreurs #}
        {{ form_row(form.title) }}
        <div class="media mb-3">
            {% if article is defined and article.image is not empty %}
            {# asset permet de pointer sur le dossier 'public', twig appelle la m√©thode 'getWebPath' de l'image #}
            <img src="{{ asset(article.image.webPath) }}" class="align-left-center mr-3" style="max-width:180px"/>
            {% endif %}
            <div class="media-body">
                {{ form_row(form.image) }}
                {{ form_row(form.deleteImage) }}
            </div>
        </div>

        {{ form_row(form.published, {label_attr: {class: 'checkbox-custom'}}) }}
        {{ form_row(form.difficulty) }}
        {{ form_row(form.content) }}
    {% endblock %}
    {% block footer %}
        {{ form_row(form.save) }} {# affiche le submit #}
    {% endblock %}
{% endembed %}
{{ form_end(form) }} {# affiche la balise de fermeture du form #}